{% extends 'base.html.twig' %}

{% block title %}Firma{% endblock %}

{% block body %}
    <h1>Firma</h1>

    <table class="table">
        <tbody class="thead-light">
            <tr>
                <th>Name</th>
                <td>{{ firma.name }}</td>
            </tr>
            <tr>
                <th>Ansprechpartner</th>
                <td>{{ firma.ansprechpartner }}</td>
            </tr>
            <tr>
                <th>Strasse</th>
                <td>{{ firma.strasse }}</td>
            </tr>
            <tr>
                <th>Hausnummer</th>
                <td>{{ firma.hausnummer }}</td>
            </tr>
            <tr>
                <th>Plz</th>
                <td>{{ firma.plz }}</td>
            </tr>
            <tr>
                <th>Ort</th>
                <td>{{ firma.ort }}</td>
            </tr>
            <tr>
                <th>Fon</th>
                <td>{{ firma.fon }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ firma.email }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a href="{{ path('firma_index') }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">zurück zur Liste</a>
        <a href="{{ path('firma_edit', {'id': firma.id}) }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">ändern</a>
    </div>
{% endblock %}

{% block sidebar %}
