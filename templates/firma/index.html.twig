{% extends 'base.html.twig' %}

{% block title %}Firma index{% endblock %}

{% block body %}
    <h1>Firma index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ansprechpartner</th>
                <th>Strasse</th>
                <th>Hausnummer</th>
                <th>Plz</th>
                <th>Ort</th>
                <th>Fon</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for firma in firmas %}
            <tr>
                <td>{{ firma.id }}</td>
                <td>{{ firma.name }}</td>
                <td>{{ firma.ansprechpartner }}</td>
                <td>{{ firma.strasse }}</td>
                <td>{{ firma.hausnummer }}</td>
                <td>{{ firma.plz }}</td>
                <td>{{ firma.ort }}</td>
                <td>{{ firma.fon }}</td>
                <td>{{ firma.email }}</td>
                <td>
                    <a href="{{ path('firma_show', {'id': firma.id}) }}">show</a>
                    <a href="{{ path('firma_edit', {'id': firma.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('firma_new') }}">Create new</a>
{% endblock %}
