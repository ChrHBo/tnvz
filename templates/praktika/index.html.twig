{% extends 'base.html.twig' %}

{% block title %}Praktika index{% endblock %}

{% block body %}
    <h1>Praktika index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Inhalt</th>
                <th>Beginn</th>
                <th>Ende</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for praktika in praktikas %}
            <tr>
                <td>{{ praktika.id }}</td>
                <td>{{ praktika.inhalt }}</td>
                <td>{{ praktika.beginn ? praktika.beginn|date('Y-m-d') : '' }}</td>
                <td>{{ praktika.ende ? praktika.ende|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('praktika_show', {'id': praktika.id}) }}">show</a>
                    <a href="{{ path('praktika_edit', {'id': praktika.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('praktika_new') }}">Create new</a>
{% endblock %}
