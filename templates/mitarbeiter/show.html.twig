{% extends 'base.html.twig' %}

{% block title %}Mitarbeiter{% endblock %}

{% block body %}
    <h1>Mitarbeiter</h1>

    <table class="table">
        <tbody class="thead-light">
            <tr>
                <th>Name</th>
                <td>{{ mitarbeiter.name }}</td>
            </tr>
            <tr>
                <th>Vorname</th>
                <td>{{ mitarbeiter.vorname }}</td>
            </tr>
            <tr>
                <th>Raum</th>
                <td>{{ mitarbeiter.raum }}</td>
            </tr>
            <tr>
                <th>Fon</th>
                <td>{{ mitarbeiter.fon }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ mitarbeiter.email }}</td>
            </tr>
            <tr>
                <th>Funktion</th>
                <td>{{ mitarbeiter.funktion.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('mitarbeiter_index') }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">zurück zur Liste</a>
        <a href="{{ path('mitarbeiter_edit', {'id': mitarbeiter.id}) }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">ändern</a>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}
    {{ include('mitarbeiter/_delete_form.html.twig') }}
{% endblock %} 
