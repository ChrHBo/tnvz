{% extends 'base.html.twig' %}

{% block title %}Eintragung{% endblock %}

{% block body %}
    <h1>Eintragung</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Datum</th>
                <td>{{ eintragung.datum ? eintragung.datum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Bereich</th>
                <td>{{ eintragung.bereich }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ eintragung.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('eintragung_index') }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">zurück zur Liste</a>
    <a href="{{ path('eintragung_edit', {'id': eintragung.id}) }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">ändern</a>

{% endblock %}
{% block sidebar %}
    {{ parent() }}
       {{ include('eintragung/_delete_form.html.twig') }}
{% endblock %} 
