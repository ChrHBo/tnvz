<form method="post" action="{{ path('eintragung_delete', {'id': eintragung.id}) }}" onsubmit="return confirm('Sind Sie sicher diesen Eintrag zu löschen?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eintragung.id) }}">
    <button class="btn btn-danger">Löschen</button>
</form>
